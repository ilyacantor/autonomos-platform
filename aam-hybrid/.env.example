# Airbyte Configuration
# Get these from: abctl local credentials
AIRBYTE_API_URL=http://localhost:8000/api/public/v1
AIRBYTE_CLIENT_ID=your-client-id-here
AIRBYTE_CLIENT_SECRET=your-client-secret-here

# Get these from Airbyte UI after creating workspace and destination
AIRBYTE_WORKSPACE_ID=your-workspace-id-here
AIRBYTE_DESTINATION_ID=your-destination-id-here

# Database Configuration
# Option 1: Replit PostgreSQL
SUPABASE_DB_URL=postgresql://neondb_owner:password@host:port/neondb?sslmode=require

# Option 2: Local PostgreSQL
# SUPABASE_DB_URL=postgresql://aam_user:aam_password@localhost:5433/aam_registry

# Redis Configuration
# Option 1: Replit Redis
REDIS_URL=redis://default:password@host:port

# Option 2: Local Redis
# REDIS_URL=redis://localhost:6379

# Salesforce Credentials (for testing)
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret

# Security
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# Service Ports (optional, defaults are fine)
SERVICE_PORT_ORCHESTRATOR=8001
SERVICE_PORT_AUTH_BROKER=8002
SERVICE_PORT_DRIFT_REPAIR=8003
SERVICE_PORT_SCHEMA_OBSERVER=8004
SERVICE_PORT_RAG_ENGINE=8005
