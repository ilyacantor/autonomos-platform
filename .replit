modules = ["nodejs-20", "bash", "web", "python-3.11", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "imagemagick", "libxcrypt", "libyaml", "openssl", "postgresql", "redis"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AutonomOS API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AAM Gauntlet API Farm"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AAM Gauntlet Backend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AAM Gauntlet UI"

[[workflows.workflow]]
name = "AutonomOS API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "AAM Gauntlet API Farm"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd aam_gauntlet/api_farm && pip install -q -r requirements.txt && python main.py"
waitForPort = 8000

[[workflows.workflow]]
name = "AAM Gauntlet Backend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd aam_gauntlet/aam && pip install -q -r requirements.txt && python api.py"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "AAM Gauntlet UI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd aam_gauntlet/ui && npm install && npm run dev"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 42391
externalPort = 3000


[deployment]
run = ["bash", "start.sh"]
deploymentTarget = "vm"
build = ["bash", "build.sh"]
