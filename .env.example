# =============================================================================
# AutonomOS Platform â€” Environment Variables
# Copy to .env and fill in values. Secrets go in Render dashboard.
# =============================================================================

# --- Database ---
DATABASE_URL=                              # PostgreSQL connection string

# --- Redis ---
REDIS_URL=                                 # Redis connection string

# --- AOS Service URLs ---
AOS_BASE_URL=                              # Platform's own public URL

# --- AI / LLM ---
OPENAI_API_KEY=                            # OpenAI API key
GEMINI_API_KEY=                            # Google Gemini API key
PINECONE_API_KEY=                          # Pinecone vector DB key

# --- Airbyte ---
AIRBYTE_API_URL=                           # Airbyte API endpoint
AIRBYTE_WORKSPACE_ID=                      # Airbyte workspace ID
AIRBYTE_CLIENT_ID=                         # Airbyte OAuth client ID
AIRBYTE_CLIENT_SECRET=                     # Airbyte OAuth client secret
AIRBYTE_ACCESS_TOKEN=                      # Airbyte access token
AIRBYTE_MODE=cloud                         # cloud | oss
AIRBYTE_IS_OSS=false                       # true if self-hosted Airbyte

# --- Salesforce ---
SALESFORCE_INSTANCE_URL=                   # Salesforce instance URL
SALESFORCE_ACCESS_TOKEN=                   # Salesforce OAuth access token
SALESFORCE_REFRESH_TOKEN=                  # Salesforce OAuth refresh token

# --- Tenant / Demo ---
TENANT_ID=                                 # Active tenant ID
DEMO_TENANT_ID=                            # Demo tenant ID
AOS_DEMO_MODE=true                         # Enable demo mode

# --- Notifications ---
SLACK_WEBHOOK_URL=                         # Slack webhook for alerts
